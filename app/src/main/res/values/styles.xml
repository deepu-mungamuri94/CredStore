<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="menuPopupStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/orangeColor</item>
        <item name="android:itemBackground">@drawable/border_round</item>
        <item name="android:alpha">0.98</item>

        <item name="android:colorControlActivated">@color/pagePackground</item>
        <item name="android:colorControlHighlight">@color/pagePackground</item>
        <item name="android:colorControlNormal">@color/pagePackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#0B5590</item>
        <!-- Used for the background -->
        <item name="android:background">#EFF5FA</item>
    </style>

    <style name="page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/pagePackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">hideKeyboard</item>
    </style>

    <style name="logo_img_view">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/round_img</item>
        <item name="android:src">@drawable/lock</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="error_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:onClick">hideKeyboard</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="pin_holder_text_view">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0ADE12</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="num_pad_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:onClick">capturePin</item>
    </style>

    <style name="page_header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#3E0F92</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">hideKeyboard</item>
    </style>

    <style name="form_field_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginVertical">30dp</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="form_mandatory_field_tag">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">*</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="form_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColorHighlight">@color/orangeColor</item>
        <item name="android:textColorLink">@color/appTextColor</item>
        <item name="android:background">@drawable/field_border</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="form_field_end_img" parent="form_field">
        <item name="android:paddingRight">50dp</item>
    </style>

    <style name="button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/pagePackground</item>
        <item name="android:text">Submit</item>
        <item name="android:background">@drawable/border_round</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_field_eye">
        <item name="android:src">@drawable/eye_open</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">-25dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/field_eye</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">showHideText</item>
    </style>

    <style name="secret_key_input_popup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="hintTextColor">@color/appTextColor</item>
        <item name="android:textColorLink">@color/appTextColor</item>
        <item name="android:textColorHighlight">@color/appTextColor</item>
        <item name="android:background">@drawable/field_border</item>
    </style>

    <style name="details_table_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>
    <style name="table_data">
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="table_data.field_name">
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="table_data.field_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.75</item>
    </style>

    <style name="list_data_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#78797F</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">-</item>
    </style>

</resources>
